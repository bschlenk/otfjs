{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
  },
  "include": ["src"]
}
